#include<iostream>
using namespace std;
int main(){
    int a,b;

    cout << "write first number" << endl;
    cin >> a;
    
    cout << "write second number" << endl;
    cin >> b;
    
    char op;
    cout << "write operation that you wanna perform between them" << endl;
    cin >> op;

    switch (op){
        case '+': cout << (a+b) << endl;
            break;
        case '-': cout << (a-b) << endl;
            break;
        case '*': cout << (a*b) << endl;
            break;
        case '/': cout << (a/b) << endl;
            break;
        case '%': cout << (a%b) << endl;
            break;

        default: cout << "please write valid operation or integer" << endl;
    }

}
